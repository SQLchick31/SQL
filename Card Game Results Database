#1. What are the max, avg, min scores?
SELECT game_name, 
ROUND(MAX(score)) as max_score, 
ROUND(AVG(score)) as avg_score,  
ROUND(MIN(score)) as min_score 
FROM card_games GROUP BY game_name;

#2. Who were the above avg players in Go Fish?
SELECT player_name AS 'above_avg_players_in_Go Fish' 
FROM card_games 
WHERE score < 5 
AND game_name = 'Go Fish' 
GROUP BY player_name; 

#3. What were the highest scores w/ player name?
SELECT game_name, ROUND(MAX(score)) 
AS all_time_highest_scores, player_name 
FROM card_games 
GROUP BY game_name;

#4. What was the comparison of number of games played to sum of all scores?
SELECT player_name, COUNT(player_name) 
AS num_matches_played, SUM(score) 
FROM card_games 
GROUP BY player_name 
ORDER BY SUM(score) DESC;

SELECT player_name, COUNT(date_played) 
AS num_matches_played, SUM(score) 
FROM card_games 
GROUP BY player_name 
HAVING COUNT(date_played) > 10 AND SUM(score) > 2000;

#5. What were the most popular games?
SELECT game_name, COUNT(game_name) AS num_times_recorded, 
    CASE
        WHEN COUNT(game_name) < 12 THEN "not as popular"
        WHEN COUNT(game_name) >= 12 AND COUNT(game_name) < 19 THEN "avg"
        ELSE "most popular"
    END as "game_popularity"
FROM card_games 
GROUP BY game_name
ORDER BY game_popularity;

#6. Who were the most avid players?
SELECT player_name,
    CASE
        WHEN COUNT(date_played) > 10 AND SUM(score) > 1500 THEN "avid players"
        ELSE "pops up now and then"
    END AS "player_intensity"
FROM card_games
GROUP BY player_name;
